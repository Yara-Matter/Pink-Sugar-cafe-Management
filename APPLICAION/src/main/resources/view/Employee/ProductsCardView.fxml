<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.application.Controller.Employee.ProductCardController"
      spacing="10"
      prefWidth="200" prefHeight="300"
      alignment="CENTER">

    <ImageView fx:id="productImage"
               fitHeight="150"
               fitWidth="150"
               preserveRatio="true"/>

    <Label fx:id="productName"
           style="-fx-font-size: 16; -fx-font-weight: bold;"/>

    <Label fx:id="productPrice"
           style="-fx-font-size: 14; -fx-text-fill: #ff7675;"/>


    <Spinner fx:id="quantitySpinner" editable="true"/>

    <Button text="Add"
            onAction="#handleAdd"
            style="-fx-background-color: #00b894; -fx-text-fill: white; -fx-background-radius: 5;"/>

    <Button text="Delete" onAction="#handleDelete"
            style="-fx-background-color: #d63031; -fx-text-fill: white; -fx-background-radius: 5;"/>
</VBox>