<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.application.Controller.Admin.SalesController"
            fx:id="rootPane"
            styleClass="root">

    <!-- Sidebar -->
    <left>
        <VBox styleClass="sidebar" spacing="15" alignment="TOP_CENTER">
            <padding>
                <Insets top="30" bottom="30" left="20" right="20"/>
            </padding>

            <Label>
                <graphic>
                    <ImageView fx:id="logoImageView" fitHeight="200" fitWidth="200" preserveRatio="true"/>
                </graphic>
            </Label>

            <Separator prefWidth="200"/>

            <Button text="Dashboard" onAction="#handleDashboard" prefWidth="210" prefHeight="40" styleClass="sidebar-button"/>
            <Button text="Sales" onAction="#handleSales" prefWidth="210" prefHeight="40" styleClass="sidebar-button active"/>
            <Button text="Inventory" onAction="#handleInventory" prefWidth="210" prefHeight="40" styleClass="sidebar-button"/>
            <Button text="Add Employee" onAction="#handleAddEmployee" prefWidth="210" prefHeight="40" styleClass="sidebar-button"/>
            <Button text="Update Employee" onAction="#handleUpdateEmployee" prefWidth="210" prefHeight="40" styleClass="sidebar-button"/>
            <Button text="About" onAction="#handleAbout" prefWidth="210" prefHeight="40" styleClass="sidebar-button"/>
            <Button text="Settings" onAction="#handleSettings" prefWidth="210" prefHeight="40" styleClass="sidebar-button"/>

            <Region VBox.vgrow="ALWAYS"/>
            <Button fx:id="logoutButton" text="Logout" onAction="#handleLogout" prefWidth="210" prefHeight="40" styleClass="sidebar-button"/>
        </VBox>
    </left>

    <!-- Main Content -->
    <center>
        <VBox spacing="20" styleClass="main-bg">
            <padding>
                <Insets top="40" right="50" bottom="40" left="50"/>
            </padding>

            <HBox alignment="CENTER_LEFT" spacing="20">
                <Label text="Sales" styleClass="page-title"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label text="Search:" styleClass="label"/>
                <TextField fx:id="searchField" promptText="Search by ID, Name or Contact..." prefWidth="250" styleClass="text-field"/>
            </HBox>

            <TableView fx:id="salesTable" VBox.vgrow="ALWAYS" styleClass="table-view">
                <columns>
                    <TableColumn fx:id="colSaleId" text="Sale ID" prefWidth="120"/>
                    <TableColumn fx:id="colCustomerName" text="Customer Name" prefWidth="250"/>
                    <TableColumn fx:id="colContact" text="Contact No." prefWidth="180"/>
                    <TableColumn fx:id="colTotal" text="Total" prefWidth="150"/>
                    <TableColumn fx:id="colDate" text="Date" prefWidth="150"/>
                </columns>
                <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
            </TableView>
        </VBox>
    </center>
</BorderPane>
