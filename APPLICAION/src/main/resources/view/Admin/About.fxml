                        </image>
                    </ImageView>
                </graphic>
            </Label>

            <Separator prefWidth="200"/>

            <!-- Sidebar Buttons -->
            <Button text="Dashboard" onAction="#handleDashboard" prefWidth="210" prefHeight="40" styleClass="sidebar-button"/>
