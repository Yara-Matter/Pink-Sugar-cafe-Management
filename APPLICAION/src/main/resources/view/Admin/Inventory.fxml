<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.application.Controller.Admin.InventoryController"
            fx:id="rootPane"
            styleClass="root">
    <left>
    <VBox styleClass="sidebar"
          spacing="15"
          alignment="TOP_CENTER">
        <padding>
            <Insets top="30" bottom="30" left="20" right="20"/>
        </padding>

        <Label>
            <graphic>
                <ImageView fx:id="logoImageView"
                           fitHeight="200"
                           fitWidth="200"
                           preserveRatio="true"/>
            </graphic>
        </Label>

        <Separator prefWidth="200"/>

        <Button text="Dashboard" onAction="#handleDashboard" prefWidth="210" prefHeight="40" styleClass="sidebar-button"/>
        <Button text="Sales" onAction="#handleSales" prefWidth="210" prefHeight="40" styleClass="sidebar-button"/>
        <Button text="Inventory" onAction="#handleInventory" prefWidth="210" prefHeight="40" styleClass="sidebar-button active"/>
        <Button text="Add Employee" onAction="#handleAddEmployee" prefWidth="210" prefHeight="40" styleClass="sidebar-button"/>
        <Button text="Update Employee" onAction="#handleUpdateEmployee" prefWidth="210" prefHeight="40" styleClass="sidebar-button"/>
        <Button text="About" onAction="#handleAbout" prefWidth="210" prefHeight="40" styleClass="sidebar-button"/>
        <Button text="Settings" onAction="#handleSettings" prefWidth="210" prefHeight="40" styleClass="sidebar-button"/>

        <Region VBox.vgrow="ALWAYS"/>

        <Button fx:id="logoutButton" text="Logout" onAction="#handleLogout" prefWidth="210" prefHeight="40" styleClass="sidebar-button"/>
    </VBox>
</left>

    <center>
        <VBox spacing="15" styleClass="main-bg">
            <padding>
                <Insets top="20" right="40" bottom="20" left="40"/>
            </padding>

            <HBox alignment="CENTER_LEFT" spacing="20">
                <Label text="Inventory" styleClass="page-title"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label text="Search:" styleClass="label"/>
                <TextField fx:id="searchField" promptText="Search products..." prefWidth="200" styleClass="text-field"/>
            </HBox>

            <TableView fx:id="inventoryTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colId" text="Product ID" prefWidth="100"/>
                    <TableColumn fx:id="colName" text="Product Name" prefWidth="150"/>
                    <TableColumn fx:id="colType" text="Type" prefWidth="120"/>
                    <TableColumn fx:id="colStock" text="Stock" prefWidth="80"/>
                    <TableColumn fx:id="colPrice" text="Price" prefWidth="100"/>
                </columns>
                <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
            </TableView>

            <HBox spacing="40" alignment="CENTER" styleClass="card">
                <GridPane hgap="20" vgap="12">
                    <Label text="Product ID:"/>
                    <TextField fx:id="idField" GridPane.columnIndex="1"/>

                    <Label text="Product Name:" GridPane.rowIndex="1"/>
                    <TextField fx:id="nameField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="Product Type:" GridPane.rowIndex="2"/>
                    <ComboBox fx:id="typeComboBox" GridPane.rowIndex="2" GridPane.columnIndex="1" prefWidth="150"/>

                    <Label text="Stock:" GridPane.columnIndex="2"/>
                    <TextField fx:id="stockField" GridPane.columnIndex="3"/>

                    <Label text="Price:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                    <TextField fx:id="priceField" GridPane.rowIndex="1" GridPane.columnIndex="3"/>
                </GridPane>

                <VBox spacing="10" alignment="CENTER">
                    <StackPane style="-fx-border-color: #bdbdbd; -fx-border-radius: 10; -fx-padding: 5;">
                        <ImageView fx:id="productImageView" fitHeight="110" fitWidth="110" preserveRatio="true"/>
                    </StackPane>
                    <Button text="Import" onAction="#handleImportImage" styleClass="primary-button"/>
                </VBox>
            </HBox>

            <HBox spacing="20" alignment="CENTER">
                <Button text="+ Add" onAction="#handleAdd" prefWidth="110" styleClass="add-button"/>
                <Button text="Update" onAction="#handleUpdate" prefWidth="110" styleClass="update-button"/>
                <Button text="Delete" onAction="#handleDelete" prefWidth="110" styleClass="delete-button"/>
                <Button text="Clear" onAction="#clearFields" prefWidth="110" styleClass="clear-button"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>